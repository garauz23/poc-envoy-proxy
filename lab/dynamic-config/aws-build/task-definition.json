{
  "family": "envoy-dynamic-s3",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::758208602079:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::758208602079:role/ecsTaskRole",
  "volumes": [
    {
      "name": "dynamic-config"
    }
  ],
  "containerDefinitions": [
    {
      "name": "envoy",
      "image": "758208602079.dkr.ecr.us-east-1.amazonaws.com/envoy:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 10000,
          "protocol": "tcp"
        },
        {
          "containerPort": 9901,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "dynamic-config",
          "containerPath": "/etc/envoy/dynamic",
          "readOnly": true
        }
      ],
      "command": [
        "/bin/sh",
        "-c",
        "until [ -f /etc/envoy/dynamic/cds.yaml ] && [ -f /etc/envoy/dynamic/lds.yaml ]; do echo \"waiting for dynamic config\"; sleep 2; done; exec /usr/local/bin/envoy -c /etc/envoy/envoy.yaml --log-level info"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/envoy",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "envoy"
        }
      }
    },
    {
      "name": "s3-sync",
      "image": "amazon/aws-cli:2.15.0",
      "essential": false,
      "entryPoint": [
        "/bin/sh",
        "-c"
      ],
      "environment": [
        {
          "name": "S3_BUCKET",
          "value": "envoy-file-config"
        },
        {
          "name": "S3_PREFIX",
          "value": ""
        },
        {
          "name": "SYNC_INTERVAL",
          "value": "5"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-east-1"
        }
      ],
      "command": [
        "while true; do aws s3 sync s3://${S3_BUCKET}/${S3_PREFIX} /etc/envoy/dynamic --delete; sleep ${SYNC_INTERVAL}; done"
      ],
      "mountPoints": [
        {
          "sourceVolume": "dynamic-config",
          "containerPath": "/etc/envoy/dynamic",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/envoy",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "s3-sync"
        }
      }
    }
  ]
}
